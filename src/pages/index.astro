---
import Layout from "../layouts/Layout.astro";
import MenuDropdown from "../components/MenuDropdown.jsx";
import SkillCard from "../components/SkillCard.astro";
import ExperienceCard from "../components/ExperienceCard.astro";
import EducationCard from "../components/EducationCard.astro";

interface Technologies {
  icon: string;
  name: string;
}

const technologies: Array<Technologies> = [
  { icon: "/icons/laravel.svg", name: "Laravel" },
  { icon: "/icons/vuejs.svg", name: "Vuejs" },
];
---

<Layout title="Portafolio, Victor Barahona">
  <main class="m-8 sm:m-8 sm:mx-20 md:m-7 xl:mx-48">
    {/* Navigation Bar  */}
    <nav
      class="fixed top-0 left-0 w-full z-50 flex flex-row md:flex-row justify-between gap-4 bg-white px-4 py-2 md:py-4"
    >
      <MenuDropdown client:load />
      <ul
        class="hidden md:flex md:w-[1000px] h-[74px] items-center justify-around bg-[#EDEDED] rounded-2xl font-normal md:text-xl lg:text-2xl"
      >
        <li class="hover:text-sky-500 cursor-pointer">About me</li>
        <li class="hover:text-sky-500 cursor-pointer">Skills</li>
        <li class="hover:text-sky-500 cursor-pointer">Education</li>
        <li class="hover:text-sky-500 cursor-pointer">Experience</li>
      </ul>
      <button
        class="w-60 md:w-[350px] h-[50px] md:h-[74px] bg-gradient-to-r from-teal-400 to-blue-500 text-white text-lg md:text-2xl font-medium py-2 md:py-4 rounded-2xl md:rounded-3xl hover:scale-105 transition-all"
      >
        Contact me
      </button>
    </nav>

    {/* Image - Small Devices */}
    <div class="flex md:hidden justify-center mx-14 mb-14 mt-20">
      <img
        class="w-40 h-40 md:w-60 md:h-60 rounded-full"
        src="/img/imagen_1.jpg"
        alt="Imagen de Victor"
      />
    </div>

    {/* Image */}
    <div class="hidden md:flex justify-center mx-14 mb-14 mt-[16rem]">
      <img
        class="w-40 h-40 md:w-60 md:h-60 rounded-full"
        src="/img/imagen_1.jpg"
        alt="Imagen de Victor"
      />
    </div>

    {/* Main Text */}
    <div
      class="hidden lg:flex justify-center items-center text-center mt-14 ml-14 mr-14 mb-6"
    >
      <h1 class="text-5xl text-[#494949]">
        <span
          class="bg-gradient-to-r from-[#6DDAC7] from-30% to-[#15ABFF] to-90% inline-block text-transparent bg-clip-text"
          >Hello, I’m Victor</span
        >, Software Engineer <br /> Based in Honduras
      </h1>
    </div>

    {/*Main Text - Medium Devices */}
    <div
      class="hidden md:flex lg:hidden justify-center items-center text-center mt-14 ml-14 mr-14 mb-6"
    >
      <h1 class="text-5xl text-[#494949]">
        <span
          class="bg-gradient-to-r from-[#6DDAC7] from-30% to-[#15ABFF] to-90% inline-block text-transparent bg-clip-text"
          >Hello, I’m Victor</span
        >
        <br /> Software Engineer <br /> Based in Honduras
      </h1>
    </div>

    {/*Main Text - Small Devices */}
    <div
      class="flex md:hidden lg:hidden justify-center items-center text-center mt-14 ml-14 mr-14 mb-6"
    >
      <h1 class="text-5xl text-[#494949]">
        <span
          class="bg-gradient-to-r from-[#6DDAC7] from-30% to-[#15ABFF] to-90% inline-block text-transparent bg-clip-text"
          >Hello I’m Victor</span
        > Software Engineer <br /> Based in Honduras
      </h1>
    </div>

    {/*Sub-Text*/}
    <div class="hidden md:flex justify-center text-center items-center mb-14">
      <p class="text-[#A8A8A8] text-2xl">
        Software Engineer and technology enthusiast, specialized <br /> in backend
        solutions and cybersecurity.
      </p>
    </div>

    {/*Sub-Text - Small Devices*/}
    <div
      class="flex md:hidden lg:hidden justify-center text-center items-center mb-14"
    >
      <p class="text-[#A8A8A8] text-2xl">
        Software Engineer and technology enthusiast, specialized in backend
        solutions and cybersecurity.
      </p>
    </div>

    {/*Technologies-Text*/}
    <div
      class="hidden md:flex justify-center items-center text-center ml-14 mr-14 mb-14"
    >
      <h2 class="text-4xl text-[#494949]">Technologies I work with</h2>
    </div>

    {/*Technologies-Text*/}
    <div
      class="flex md:hidden justify-center items-center text-center ml-14 mr-14 mb-6"
    >
      <h2 class="text-3xl text-[#494949]">Technologies I work with</h2>
    </div>

    {/*Icon Bar */}
    <div class="hidden md:flex justify-around mb-[13rem]">
      <div class="w-32 h-32 bg-icon-gradient mask mask-react"></div>
      <div class="w-32 h-32 bg-icon-gradient mask mask-next"></div>
      <div class="w-32 h-32 bg-icon-gradient mask mask-python"></div>
      <div class="w-32 h-32 bg-icon-gradient mask mask-node"></div>
    </div>

    {/*Icon Bar - Small Devices */}
    <div class="flex md:hidden justify-around">
      <div>
        <div class="w-24 h-24 bg-icon-gradient mask mask-react mb-8"></div>
        <div class="w-24 h-24 bg-icon-gradient mask mask-next"></div>
      </div>
      <div>
        <div class="w-24 h-24 bg-icon-gradient mask mask-python mb-8"></div>
        <div class="w-24 h-24 bg-icon-gradient mask mask-node"></div>
      </div>
    </div>

    {/*About me - Container */}

    <div>
      {/* About me - Text*/}
      <div class="flex justify-center gap-8 mt-36 mb-10">
        <h2
          class="text-[51.5px] bg-gradient-to-r from-[#6DDAC7] from-30% to-[#15ABFF] to-90% inline-block text-transparent bg-clip-text"
        >
          About me
        </h2>
      </div>

      {/* About me - Content*/}
      <div class="hidden lg:flex justify-center gap-20">
        <div class="flex">
          <img
            class="h-[621px]"
            src="/img/imagen_2.jpeg"
            alt="Imagen 2 de Victor"
          />
        </div>

        <div class="max-w-xl flex flex-col justify-between text-justify">
          <p class="text-4xl text-[#494949]">
            I am a fan of technology, since I entered this area I like
            everything that has to do with it, so I have developed in various
            areas throughout college, besides that I am a constant learner, I
            like to know what's new in technology and learn from the best, I am
            currently pursuing a certificate in cybersecurity to further boost
            my career and apply this knowledge in various areas.
          </p>
          <div>
            <a
              href="/public/pdf/cv.pdf"
              download="cv.pdf"
              class="bg-[#00aaff] text-white border-none rounded-3xl text-2xl text-center max-w-100% h-20 flex items-center justify-center"
            >
              Download CV
            </a>
          </div>
        </div>
      </div>

      {/* About me - Content - Small Device*/}
      <div class="flex lg:hidden justify-center gap-20">
        <div class="max-w-sm flex flex-col justify-between text-justify">
          <p class="text-3xl text-[#494949] mb-14">
            I am a fan of technology, since I entered this area I like
            everything that has to do with it, so I have developed in various
            areas throughout college, besides that I am a constant learner, I
            like to know what's new in technology and learn from the best.
          </p>
          <div>
            <a
              href="/public/pdf/cv.pdf"
              download="cv.pdf"
              class="bg-[#00aaff] text-white border-none rounded-3xl text-2xl text-center max-w-100% h-20 flex items-center justify-center"
            >
              Download CV
            </a>
          </div>
        </div>
      </div>
    </div>

    {/*Skill-Set - Container*/}
    <div>
      {/* Skill-Set - Text*/}
      <div class="flex justify-center gap-8 mt-36 mb-10">
        <h2
          class="text-[51.5px] bg-gradient-to-r from-[#6DDAC7] from-30% to-[#15ABFF] to-90% inline-block text-transparent bg-clip-text"
        >
          Skill-Set
        </h2>
      </div>

      {/* Skill-Set - Content*/}
      <div class="hidden md:flex flex-col">
        <div class="flex justify-center gap-12 mb-14">
          <SkillCard
            color="#6DDAC7"
            description="I design, implement and maintain databases, ensuring their integrity, performance and security."
            icon="/icons_skill/database.svg"
            title="Data Base"
          />
          <SkillCard
            color="#C3EAFF"
            description="I design, implement and maintain the server logic, databases and APIs that support client-side functionality."
            icon="/icons_skill/server.svg"
            title="Backend Developer"
          />
        </div>

        <div class="flex justify-center gap-12">
          <SkillCard
            color="#6DDAC7"
            description="I implement and maintain security measures to protect systems and data against cyber-attacks."
            icon="/icons_skill/shield.svg"
            title="Cybersecurity"
          />
          <SkillCard
            color="#C3EAFF"
            description="I configure and manage the network infrastructure, ensuring that communication systems are secure, efficient and well connected."
            icon="/icons_skill/network.svg"
            title="Network"
          />
        </div>
      </div>

      {/* Skill-Set - Content - Small Devices*/}
      <div
        class="flex md:hidden flex-col items-center <justify-center></justify-center>"
      >
        <div class="mb-14">
          <div class="mb-14">
            <SkillCard
              color="#6DDAC7"
              description="I design, implement and maintain databases, ensuring their integrity, performance and security."
              icon="/icons_skill/database.svg"
              title="Data Base"
            />
          </div>
          <SkillCard
            color="#C3EAFF"
            description="I design, implement and maintain the server logic, databases and APIs that support client-side functionality."
            icon="/icons_skill/server.svg"
            title="Backend Developer"
          />
        </div>

        <div class="">
          <div class="mb-14">
            <SkillCard
              color="#6DDAC7"
              description="I implement and maintain security measures to protect systems and data against cyber-attacks."
              icon="/icons_skill/shield.svg"
              title="Cybersecurity"
            />
          </div>

          <SkillCard
            color="#C3EAFF"
            description="I configure and manage the network infrastructure, ensuring that communication systems are secure, efficient and well connected."
            icon="/icons_skill/network.svg"
            title="Network"
          />
        </div>
      </div>
    </div>

    {/*Experience - Container */}

    <div>
      {/* Experience - Text*/}
      <div class="flex justify-center gap-8 mt-36 mb-10">
        <h2
          class="text-[51.5px] bg-gradient-to-r from-[#6DDAC7] from-30% to-[#15ABFF] to-90% inline-block text-transparent bg-clip-text"
        >
          Experience
        </h2>
      </div>

      {/* Experience - Content*/}
      <div class="flex justify-center">
        <ExperienceCard
          companyTitle="BMedical"
          jobTitle="Full-Stack Developer"
          companyImage="/img/bmedical.png"
          description="During my internship at BMedical, I had the opportunity to acquire new knowledge in web development, using frameworks such as Laravel for the backend and Vue.js in frontend, this internship allowed me to have an experience in a group of professionals in web development and face new challenges"
          technologies={technologies}
        />
      </div>
    </div>

    {/* Education - Container */}
    <div class="mb-36">
      {/* Education - Text*/}
      <div class="flex justify-center gap-8 mt-36 mb-10">
        <h2
          class="text-[51.5px] bg-gradient-to-r from-[#6DDAC7] from-30% to-[#15ABFF] to-90% inline-block text-transparent bg-clip-text"
        >
          Education
        </h2>
      </div>

      {/* Education - Content*/}
      <div>
        <EducationCard
          initialYear="2019"
          finalYear="Present"
          title="System Engineer"
          university="Honduras - Universidad Nacional Autonoma de Honduras"
        />
        <EducationCard
          initialYear="2024"
          finalYear="Present"
          title="Cybersecurity Certificate"
          university="Information Risk and Security Institute"
        />
      </div>
    </div>

    {/*Technologies-Text*/}
    <div
      class="hidden md:flex justify-center items-center text-center ml-14 mr-14 mb-14"
    >
      <h2 class="text-4xl text-[#494949]">Contact me</h2>
    </div>

    {/*Technologies-Text*/}
    <div
      class="flex md:hidden justify-center items-center text-center ml-14 mr-14 mb-6"
    >
      <h2 class="text-3xl text-[#494949]">Contact me</h2>
    </div>

    {/*Icon Bar */}
    <div class="hidden md:flex justify-around mb-[13rem]">
      <div class="w-32 h-32 bg-icon-gradient-bottom mask mask-phone"></div>
      <div class="w-32 h-32 bg-icon-gradient-bottom mask mask-linkedin"></div>
      <div class="w-32 h-32 bg-icon-gradient-bottom mask mask-mail"></div>
    </div>

    {/*Icon Bar - Small Devices */}
    <div class="flex flex-col justify-center items-center gap-12 md:hidden">
      <div class="w-20 h-20 bg-icon-gradient-bottom mask mask-phone"></div>
      <div class="w-20 h-20 bg-icon-gradient-bottom mask mask-linkedin"></div>
      <div class="w-20 h-20 bg-icon-gradient-bottom mask mask-mail"></div>
    </div>
  </main>
</Layout>

<style>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  @layer utilities {
    .mask {
      -webkit-mask-size: contain;
      -webkit-mask-repeat: no-repeat;
      -webkit-mask-position: center;
      mask-size: contain;
      mask-repeat: no-repeat;
      mask-position: center;
    }
    .mask-react {
      -webkit-mask-image: url("/icons/react.svg");
      mask-image: url("/icons/react.svg");
    }
    .mask-next {
      -webkit-mask-image: url("/icons/next.svg");
      mask-image: url("/icons/next.svg");
    }
    .mask-python {
      -webkit-mask-image: url("/icons/python.svg");
      mask-image: url("/icons/python.svg");
    }
    .mask-node {
      -webkit-mask-image: url("/icons/node.svg");
      mask-image: url("/icons/node.svg");
